<?xml version="1.0" encoding="UTF-8"?>
<!-- https://phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/5.7/phpunit.xsd"
         backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="tests/bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false">
    <filter>
        <whitelist>
            <directory>./</directory>
            <exclude>
                <directory>tests</directory>
                <directory>vendor</directory>
            </exclude>
        </whitelist>
    </filter>
    <testsuites>
        <testsuite name="webeweb/smsmode-library">
            <directory suffix="Test.php">./tests</directory>
            <exclude>tests/API/*</exclude>
            <exclude>tests/API/Model/*</exclude>
            <exclude>tests/API/Provider/*</exclude>
            <exclude>tests/Authentication/*</exclude>
            <exclude>tests/Exception/*</exclude>
            <exclude>tests/Helper/NumberHelperTest.php</exclude>
            <exclude>tests/Provider/*</exclude>
            <exclude>tests/Response/*</exclude>
            <exclude>tests/Exception/SMSModeInvalidNumberExceptionTest.php</exclude>
            <exclude>tests/Exception/SMSModeMaxLimitNumberReachedExceptionTest.php</exclude>
            <exclude>tests/Exception/SMSModeMessageTooLongExceptionTest.php</exclude>
            <exclude>tests/Provider/SMSModeProviderTest.php</exclude>
        </testsuite>
    </testsuites>
</phpunit>
